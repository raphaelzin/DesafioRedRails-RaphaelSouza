<div id="container">
	<div class="row">
		<div class="col-md-3">
			<%= image_tag @user.picture.url, class: "avatar" %>
			<h3><%= @user.name %></h3>
			<%= @user.email %>
		</div>
		<div class="col-md-6">
			<%= render 'users/offers' %>
			<br>
			<h2>Comments:</h2>
			<% @user.comments.each do |c| %>
				"<%= c.text %>", <%= c.user.name %>
			<% end %>
		</div>
	</div>
</div>