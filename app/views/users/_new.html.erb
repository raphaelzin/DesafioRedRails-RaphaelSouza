
<h2>Sign In</h2><br>
<%= form_for (@user) do |f| %>

<%= f.label :name%>
<%= f.text_field :name, required: true, class: "form-control"%><br>

<%= f.label :email %>
<%= f.text_field :email, required: true, class: "form-control" %><br>

<%= f.label "Description"%>
<%= f.text_area :desc, class: "form-control" %><br>

<%= f.label :password %>
<%= f.password_field :password, required: true, class: "form-control" %><br>

<%= f.label :picture %>
<%= f.file_field :picture %><br>

<%= f.submit "Sign me in!", class: "btn btn-primary" %>

<% end %>
