<div class="col-md-6 col-md-offset-3" id="comment-area">
	<h3>Coments</h3>
	<% @room.comments.each do |comment| %>
		<div class="comment">
		 	<h5> 
		 		"<%= comment.text %>", <%= comment.user.name %> 
		 		<% if current_user == comment.user or current_user == @room.user %>
		 			<%= link_to "Delete", room_comment_path(@room,comment), method: :delete %>
		 		<% end %>
		 	</h5>

		</div>
	<% end %>

	<!-- Se o usuário já se hospedou nesse quarto -->
	<!-- if current_user.rent_histories.where(room_id: @room).count > 0 -->

	<!-- Para fins de teste, true -->
	<% if true %>
		<%= form_for ([@room, @comment]) do |f| %>
			<%= f.text_area :text, class: "form-control" %><br>
			<%= f.hidden_field :user_id, value: current_user.id %>
			<%= f.hidden_field :room_id, value: @room.id %>
			<%= f.submit "Comment", class: "btn btn-info pull-right" %>
		<% end %>
	<% end %>
</div>